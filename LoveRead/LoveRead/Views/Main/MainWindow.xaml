<Window x:Class="LoveRead.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:readBook="clr-namespace:LoveRead.Views.Tabs.ReadBook"
        xmlns:bookDetails="clr-namespace:LoveRead.Views.Tabs.BookDetails"
        xmlns:saveBook="clr-namespace:LoveRead.Views.Tabs.SaveBook"
        mc:Ignorable="d"
        Title="LoveRead" 
        Height="700" MinHeight="600"
        Width="1000" MinWidth="950"
        Icon="../../Assets/favicon.ico"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    <materialDesign:DrawerHost >
        <materialDesign:DrawerHost.BottomDrawerContent>
            <ScrollViewer x:Name="LogList" VerticalScrollBarVisibility="Auto" Margin="16,5,5,5" MinHeight="250" MaxHeight="300">
                <ItemsControl ItemsSource="{Binding LogList}" />
            </ScrollViewer>
        </materialDesign:DrawerHost.BottomDrawerContent>
        
        <materialDesign:Transitioner SelectedIndex="0">

            <materialDesign:TransitionerSlide Background="{StaticResource MaterialDesignBackground}">
                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Left" Duration="0:0:0.5" />
                </materialDesign:TransitionerSlide.ForwardWipe>
                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Right" Duration="0:0:0.5" />
                </materialDesign:TransitionerSlide.BackwardWipe>

                <readBook:ReadBookView />
            </materialDesign:TransitionerSlide>

            <materialDesign:TransitionerSlide Background="{StaticResource MaterialDesignBackground}">
                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Left" Duration="0:0:0.5" />
                </materialDesign:TransitionerSlide.ForwardWipe>
                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Right" Duration="0:0:0.5"  />
                </materialDesign:TransitionerSlide.BackwardWipe>
                
                <bookDetails:BookDetailsView />
            </materialDesign:TransitionerSlide>

            <materialDesign:TransitionerSlide Background="{StaticResource MaterialDesignBackground}">
                <materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:SlideWipe Direction="Left" Duration="0:0:0.5" />
                </materialDesign:TransitionerSlide.ForwardWipe>
                <materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:SlideWipe Direction="Right" Duration="0:0:0.5"  />
                </materialDesign:TransitionerSlide.BackwardWipe>

                <saveBook:SaveBookView />
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
